---
import '../styles/global.css'
---

<div class="categories-container">
    <div class="food-card">
        <img src="/src/images/comida-category.png" alt="sushi">
        <div class="card-text">
            <h3>Comidas</h3>
            <p>Platos principales y platos fuertes</p>
        </div>
    </div>
    <div class="food-card">
        <img src="./src/images/bebida-category.png" alt="sushi">
        <div class="card-text">
            <h3>Bebidas</h3>
            <p>Jugos, gaseosas y licores</p>
        </div>
    </div>
    <div class="food-card">
        <img src="./src/images/entrada-category.png" alt="sushi">
        <div class="card-text">
            <h3>Entradas</h3>
            <p>Aperitivos</p>
        </div>
    </div>
    <div class="food-card">
        <img src="./src/images/postre-category.png" alt="sushi">
        <div class="card-text">
            <h3>Postres</h3>
            <p>Dulces</p>
        </div>
    </div>
</div>

<style>
    .categories-container {
        display: grid;
        grid-template-columns: repeat(1, 1fr);
        gap: 1rem;
        padding: 1rem;
    }

    .food-card {
        position: relative;
        border-radius: 12px;
        overflow: hidden;

    }

    .food-card img {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: 12px;
        display: block;

    }
    
    .card-text {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 1.5rem 1rem 1rem;
        color: white;
    }

    .card-text h3 {
        margin: 0 0 0.5rem 0;
        font-size: 1.3rem;
        font-weight: 600;
    }

    .card-text p {
        margin: 0;
        font-size: 1rem;
        opacity: 0.9;
    }
</style>