---
import '../styles/global.css'


const categories = [
    {
        image: './src/images/entrada-category.png',
        title: 'Entradas',
        description: 'Aperitivos',
        alt: 'Platillos',
        link: '/entradas'
    },
    {
        image: './src/images/comida-category.png',
        title: 'Comidas',
        description: 'Comidas principales y platos fuertes',
        alt: 'Comidas principales y platos fuertes',
        link: '/comidas'
    }
];


---

<div class="categories-container">
    {categories.map(category => (
        <a href={category.link}>
            <div class="food-card">
                <img src={category.image} alt={category.alt}>
                <div class="card-text">
                    <h3>{category.title}</h3>
                    <p>{category.description}</p>
                </div>
            </div>
        </a>
    ))}
</div>

<style>
    .categories-container {
        display: grid;
        grid-template-columns: repeat(1, 1fr);
        gap: 1rem;
        padding: 1rem;
    }

    .food-card {
        position: relative;
        border-radius: 12px;
        overflow: hidden;

    }

    .food-card img {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: 12px;
        display: block;

    }
    
    .card-text {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 1.5rem 1rem 1rem;
        color: white;
    }

    .card-text h3 {
        margin: 0 0 0.5rem 0;
        font-size: 1.3rem;
        font-weight: 600;
    }

    .card-text p {
        margin: 0;
        font-size: 1rem;
        opacity: 0.9;
    }
</style>